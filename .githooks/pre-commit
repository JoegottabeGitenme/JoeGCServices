#!/bin/bash
# Pre-commit hook for weather-wms
# Runs formatting checks and basic linting before allowing commits

set -e

echo "Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if we're in a git repository
if ! git rev-parse --git-dir > /dev/null 2>&1; then
    echo -e "${RED}Error: Not in a git repository${NC}"
    exit 1
fi

# Get list of staged Rust files
STAGED_RS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.rs$' || true)

if [ -z "$STAGED_RS_FILES" ]; then
    echo -e "${GREEN}No Rust files staged, skipping Rust checks${NC}"
    exit 0
fi

echo -e "${YELLOW}Checking staged Rust files...${NC}"

# 1. Check formatting
echo "  Checking formatting..."
if ! cargo fmt --check > /dev/null 2>&1; then
    echo -e "${RED}Formatting check failed!${NC}"
    echo "Run 'cargo fmt' to fix formatting issues."
    echo ""
    echo "Files with formatting issues:"
    cargo fmt --check 2>&1 | grep "^Diff in" | head -10
    exit 1
fi
echo -e "  ${GREEN}Formatting OK${NC}"

# 2. Check for trailing whitespace in staged files
echo "  Checking for trailing whitespace..."
WHITESPACE_ERRORS=""
for file in $STAGED_RS_FILES; do
    if [ -f "$file" ]; then
        if grep -qE "[[:space:]]$" "$file"; then
            WHITESPACE_ERRORS="${WHITESPACE_ERRORS}\n  - $file"
        fi
    fi
done

if [ -n "$WHITESPACE_ERRORS" ]; then
    echo -e "${RED}Trailing whitespace found in:${WHITESPACE_ERRORS}${NC}"
    echo "Run: sed -i 's/[[:space:]]*$//' <file> to fix"
    exit 1
fi
echo -e "  ${GREEN}No trailing whitespace${NC}"

# 3. Quick cargo check (faster than full clippy)
echo "  Running cargo check..."
if ! cargo check --workspace --quiet 2>/dev/null; then
    echo -e "${RED}Cargo check failed!${NC}"
    echo "Fix compilation errors before committing."
    cargo check --workspace 2>&1 | tail -20
    exit 1
fi
echo -e "  ${GREEN}Cargo check OK${NC}"

# 4. Run tests for modified crates (optional, can be slow)
# Uncomment if you want to run tests on pre-commit
# echo "  Running tests..."
# if ! cargo test --workspace --quiet 2>/dev/null; then
#     echo -e "${RED}Tests failed!${NC}"
#     exit 1
# fi
# echo -e "  ${GREEN}Tests OK${NC}"

echo -e "${GREEN}All pre-commit checks passed!${NC}"
exit 0
