#!/bin/bash
# Pre-push hook for weather-wms
# Runs formatting checks, linting, and tests before allowing pushes
# This ensures code quality without slowing down individual commits

set -e

echo "Running pre-push checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if we're in a git repository
if ! git rev-parse --git-dir > /dev/null 2>&1; then
    echo -e "${RED}Error: Not in a git repository${NC}"
    exit 1
fi

# 1. Check formatting
echo "  Checking formatting..."
if ! cargo fmt --check > /dev/null 2>&1; then
    echo -e "${RED}Formatting check failed!${NC}"
    echo ""
    echo "Run 'cargo fmt' to fix formatting issues, then amend your commit:"
    echo "  cargo fmt"
    echo "  git add -u"
    echo "  git commit --amend --no-edit"
    echo ""
    echo "Files with formatting issues:"
    cargo fmt --check 2>&1 | grep "^Diff in" | head -10
    exit 1
fi
echo -e "  ${GREEN}Formatting OK${NC}"

# 2. Check for trailing whitespace in Rust files
echo "  Checking for trailing whitespace..."
WHITESPACE_ERRORS=""
RS_FILES=$(find . -name "*.rs" -not -path "./target/*" 2>/dev/null || true)
for file in $RS_FILES; do
    if grep -qE "[[:space:]]$" "$file" 2>/dev/null; then
        WHITESPACE_ERRORS="${WHITESPACE_ERRORS}\n  - $file"
    fi
done

if [ -n "$WHITESPACE_ERRORS" ]; then
    echo -e "${RED}Trailing whitespace found in:${WHITESPACE_ERRORS}${NC}"
    echo ""
    echo "Fix with: find . -name '*.rs' -not -path './target/*' -exec sed -i 's/[[:space:]]*\$//' {} \\;"
    echo "Then amend your commit:"
    echo "  git add -u"
    echo "  git commit --amend --no-edit"
    exit 1
fi
echo -e "  ${GREEN}No trailing whitespace${NC}"

# 3. Cargo check
echo "  Running cargo check..."
if ! cargo check --workspace --quiet 2>/dev/null; then
    echo -e "${RED}Cargo check failed!${NC}"
    echo "Fix compilation errors before pushing."
    cargo check --workspace 2>&1 | tail -30
    exit 1
fi
echo -e "  ${GREEN}Cargo check OK${NC}"

# 4. Run tests
echo "  Running tests..."
if ! cargo test --workspace --quiet 2>/dev/null; then
    echo -e "${RED}Tests failed!${NC}"
    echo "Fix failing tests before pushing."
    exit 1
fi
echo -e "  ${GREEN}Tests OK${NC}"

echo -e "${GREEN}All pre-push checks passed!${NC}"
exit 0
