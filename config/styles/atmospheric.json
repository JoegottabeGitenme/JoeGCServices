{
  "version": "1.0",
  "metadata": {
    "name": "Atmospheric Styles",
    "description": "Styles for atmospheric parameters: pressure, humidity, cloud cover, visibility, and CAPE"
  },
  "styles": {
    "pressure_msl": {
      "default": true,
      "name": "Mean Sea Level Pressure",
      "description": "MSLP with contours",
      "type": "contour",
      "units": "hPa",
      "transform": {
        "type": "pa_to_hpa"
      },
      "contour": {
        "interval": 4,
        "base": 1000,
        "min_value": 900,
        "max_value": 1100,
        "line_width": 1.0,
        "line_color": "#000000",
        "major_interval": 20,
        "major_line_width": 2.0,
        "labels": true,
        "label_font_size": 10.0,
        "smoothing_passes": 1
      },
      "legend": {
        "title": "Pressure (hPa)"
      }
    },
    "pressure_msl_filled": {
      "name": "Mean Sea Level Pressure (Filled)",
      "description": "MSLP as filled gradient",
      "type": "gradient",
      "units": "hPa",
      "transform": {
        "type": "pa_to_hpa"
      },
      "stops": [
        { "value": 960, "color": "#4B0082", "label": "960" },
        { "value": 980, "color": "#0000FF", "label": "980" },
        { "value": 1000, "color": "#00FFFF", "label": "1000" },
        { "value": 1013, "color": "#00FF00", "label": "1013" },
        { "value": 1020, "color": "#FFFF00", "label": "1020" },
        { "value": 1030, "color": "#FFA500", "label": "1030" },
        { "value": 1040, "color": "#FF0000", "label": "1040" },
        { "value": 1050, "color": "#800000", "label": "1050" }
      ],
      "interpolation": "linear",
      "out_of_range": "clamp",
      "legend": {
        "title": "Pressure (hPa)",
        "labels": ["960", "980", "1000", "1013", "1020", "1030", "1040", "1050"]
      }
    },
    "geopotential_500": {
      "name": "500mb Geopotential Height",
      "description": "500mb height contours",
      "type": "contour",
      "units": "dam",
      "transform": {
        "type": "linear",
        "scale": 0.1,
        "offset": 0
      },
      "contour": {
        "interval": 6,
        "line_width": 1.5,
        "line_color": "#0000FF",
        "major_interval": 12,
        "major_line_width": 2.5,
        "labels": true,
        "label_font_size": 11.0,
        "smoothing_passes": 1
      },
      "legend": {
        "title": "Height (dam)"
      }
    },
    "relative_humidity": {
      "name": "Relative Humidity",
      "description": "Relative humidity percentage",
      "type": "gradient",
      "units": "%",
      "range": {
        "min": 0,
        "max": 100
      },
      "stops": [
        { "value": 0, "color": "#8B4513", "label": "0%" },
        { "value": 20, "color": "#CD853F", "label": "20%" },
        { "value": 40, "color": "#F5DEB3", "label": "40%" },
        { "value": 60, "color": "#98FB98", "label": "60%" },
        { "value": 80, "color": "#00CED1", "label": "80%" },
        { "value": 100, "color": "#0000FF", "label": "100%" }
      ],
      "interpolation": "linear",
      "out_of_range": "clamp",
      "legend": {
        "title": "Relative Humidity (%)",
        "labels": ["0%", "20%", "40%", "60%", "80%", "100%"]
      }
    },
    "cloud_cover": {
      "name": "Cloud Cover",
      "description": "Total cloud coverage percentage",
      "type": "gradient",
      "units": "%",
      "range": {
        "min": 0,
        "max": 100
      },
      "stops": [
        { "value": 0, "color": "#00000000", "label": "Clear" },
        { "value": 10, "color": "#FFFFFF20", "label": "10%" },
        { "value": 25, "color": "#FFFFFF40", "label": "25%" },
        { "value": 50, "color": "#FFFFFF80", "label": "50%" },
        { "value": 75, "color": "#FFFFFFC0", "label": "75%" },
        { "value": 100, "color": "#C0C0C0", "label": "Overcast" }
      ],
      "interpolation": "linear",
      "out_of_range": "clamp",
      "legend": {
        "title": "Cloud Cover",
        "labels": ["Clear", "25%", "50%", "75%", "Overcast"]
      }
    },
    "visibility": {
      "name": "Visibility",
      "description": "Surface visibility",
      "type": "gradient",
      "units": "km",
      "range": {
        "min": 0,
        "max": 50
      },
      "stops": [
        { "value": 0, "color": "#800000", "label": "<1 km" },
        { "value": 1, "color": "#FF0000", "label": "1 km" },
        { "value": 3, "color": "#FF8000", "label": "3 km" },
        { "value": 5, "color": "#FFFF00", "label": "5 km" },
        { "value": 10, "color": "#00FF00", "label": "10 km" },
        { "value": 20, "color": "#00FFFF", "label": "20 km" },
        { "value": 50, "color": "#FFFFFF", "label": ">50 km" }
      ],
      "interpolation": "linear",
      "out_of_range": "clamp",
      "legend": {
        "title": "Visibility (km)",
        "labels": ["<1", "3", "5", "10", "20", ">50"]
      }
    },
    "cape": {
      "name": "CAPE",
      "description": "Convective Available Potential Energy - atmospheric instability indicator",
      "type": "gradient",
      "units": "J/kg",
      "range": {
        "min": 0,
        "max": 5000
      },
      "stops": [
        { "value": 0, "color": "#FFFFFF00", "label": "0" },
        { "value": 250, "color": "#FFFACD", "label": "Marginal" },
        { "value": 500, "color": "#FFFF00", "label": "Weak" },
        { "value": 1000, "color": "#FFA500", "label": "Moderate" },
        { "value": 2000, "color": "#FF4500", "label": "Strong" },
        { "value": 3000, "color": "#FF0000", "label": "Extreme" },
        { "value": 4000, "color": "#8B0000", "label": "4000+" },
        { "value": 5000, "color": "#4B0082", "label": "5000+" }
      ],
      "interpolation": "linear",
      "out_of_range": "extend",
      "legend": {
        "title": "CAPE (J/kg)",
        "labels": ["0", "500", "1000", "2000", "3000", "4000+"]
      }
    }
  }
}
