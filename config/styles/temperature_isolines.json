{
  "version": "1.0",
  "metadata": {
    "name": "Temperature Isoline Styles",
    "description": "Temperature contour line styles for overlays"
  },
  "styles": {
    "default": {
      "name": "Temperature Isolines",
      "description": "Temperature contour lines at 5C intervals",
      "type": "contour",
      "units": "K",
      "transform": {
        "type": "k_to_c"
      },
      "contour": {
        "interval": 5.0,
        "min_value": -40,
        "max_value": 40,
        "line_width": 2.0,
        "line_color": "#000000",
        "labels": true,
        "label_font_size": 10.0,
        "smoothing_passes": 1
      },
      "legend": {
        "title": "Temperature (C)"
      }
    },
    "fine": {
      "name": "Temperature Isolines (Fine)",
      "description": "Temperature contour lines at 2C intervals",
      "type": "contour",
      "units": "K",
      "transform": {
        "type": "k_to_c"
      },
      "contour": {
        "interval": 2.0,
        "min_value": -40,
        "max_value": 40,
        "line_width": 1.0,
        "line_color": "#333333",
        "major_interval": 10,
        "major_line_width": 2.0,
        "labels": true,
        "label_font_size": 9.0,
        "smoothing_passes": 1
      },
      "legend": {
        "title": "Temperature (C)"
      }
    },
    "freezing": {
      "name": "Freezing Line",
      "description": "0C isotherm highlighted",
      "type": "contour",
      "units": "K",
      "transform": {
        "type": "k_to_c"
      },
      "contour": {
        "interval": 1000,
        "base": 0,
        "min_value": -0.5,
        "max_value": 0.5,
        "line_width": 3.0,
        "line_color": "#0000FF",
        "labels": true,
        "label_font_size": 12.0,
        "smoothing_passes": 2
      },
      "legend": {
        "title": "Freezing Line (0C)"
      }
    }
  }
}
