{
  "version": "1.0",
  "metadata": {
    "name": "Temperature Isoline Styles",
    "description": "Temperature contour line styles for overlays"
  },
  "styles": {
    "default": {
      "name": "Temperature Isolines",
      "description": "Temperature contour lines at 5C intervals with labels",
      "type": "contour",
      "units": "K",
      "transform": {
        "type": "k_to_c"
      },
      "contour": {
        "interval": 5.0,
        "min_value": -40,
        "max_value": 40,
        "unit_conversion": 273.15,
        "line_width": 1.5,
        "line_color": "#333333",
        "labels": true,
        "label_font_size": 9.0,
        "label_spacing": 180.0,
        "smoothing_passes": 1,
        "special_levels": [
          {
            "value": 0,
            "line_color": "#0066FF",
            "line_width": 2.5,
            "label": "0"
          }
        ]
      },
      "legend": {
        "title": "Temperature (C)"
      }
    },
    "fine": {
      "name": "Temperature Isolines (Fine)",
      "description": "Temperature contour lines at 2C intervals",
      "type": "contour",
      "units": "K",
      "transform": {
        "type": "k_to_c"
      },
      "contour": {
        "interval": 2.0,
        "min_value": -40,
        "max_value": 40,
        "unit_conversion": 273.15,
        "line_width": 1.0,
        "line_color": "#555555",
        "major_interval": 10,
        "major_line_width": 2.0,
        "labels": true,
        "label_font_size": 8.0,
        "label_spacing": 200.0,
        "smoothing_passes": 1,
        "special_levels": [
          {
            "value": 0,
            "line_color": "#0066FF",
            "line_width": 2.5,
            "label": "0"
          }
        ]
      },
      "legend": {
        "title": "Temperature (C)"
      }
    },
    "freezing": {
      "name": "Freezing Line",
      "description": "0C isotherm only",
      "type": "contour",
      "units": "K",
      "transform": {
        "type": "k_to_c"
      },
      "contour": {
        "levels": [273.15],
        "line_width": 3.0,
        "line_color": "#0066FF",
        "labels": true,
        "label_font_size": 11.0,
        "label_spacing": 120.0,
