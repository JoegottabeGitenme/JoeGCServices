{
  "version": "1.0",
  "metadata": {
    "name": "Precipitation Styles",
    "description": "Styles for various precipitation products including rate, reflectivity, accumulation, and snow"
  },
  "styles": {
    "precipitation_rate": {
      "default": true,
      "name": "Precipitation Rate",
      "description": "Precipitation intensity in mm/hr",
      "type": "gradient",
      "units": "mm/hr",
      "range": {
        "min": 0,
        "max": 100
      },
      "stops": [
        { "value": 0, "color": "#00000000", "label": "0" },
        { "value": 0.1, "color": "#A0F0A0", "label": "0.1" },
        { "value": 0.5, "color": "#00C000", "label": "0.5" },
        { "value": 1, "color": "#008000", "label": "1" },
        { "value": 2, "color": "#FFFF00", "label": "2" },
        { "value": 5, "color": "#FFC000", "label": "5" },
        { "value": 10, "color": "#FF8000", "label": "10" },
        { "value": 20, "color": "#FF0000", "label": "20" },
        { "value": 50, "color": "#C00000", "label": "50" },
        { "value": 100, "color": "#800080", "label": "100" }
      ],
      "interpolation": "linear",
      "out_of_range": "clamp",
      "no_data": {
        "value": -999,
        "color": "transparent"
      },
      "legend": {
        "title": "Precipitation Rate (mm/hr)",
        "labels": ["0", "1", "5", "10", "20", "50", "100"]
      }
    },
    "radar_reflectivity": {
      "name": "Radar Reflectivity",
      "description": "NWS standard radar reflectivity colors",
      "type": "filled_contour",
      "units": "dBZ",
      "range": {
        "min": -30,
        "max": 75
      },
      "stops": [
        { "value": -30, "color": "#00000000", "label": "<-30" },
        { "value": 5, "color": "#9C9C9C", "label": "5" },
        { "value": 10, "color": "#767676", "label": "10" },
        { "value": 15, "color": "#00FFFF", "label": "15" },
        { "value": 20, "color": "#00BFFF", "label": "20" },
        { "value": 25, "color": "#0080FF", "label": "25" },
        { "value": 30, "color": "#00FF00", "label": "30" },
        { "value": 35, "color": "#00C000", "label": "35" },
        { "value": 40, "color": "#008000", "label": "40" },
        { "value": 45, "color": "#FFFF00", "label": "45" },
        { "value": 50, "color": "#E6C000", "label": "50" },
        { "value": 55, "color": "#FF8000", "label": "55" },
        { "value": 60, "color": "#FF0000", "label": "60" },
        { "value": 65, "color": "#C00000", "label": "65" },
        { "value": 70, "color": "#800000", "label": "70" },
        { "value": 75, "color": "#FF00FF", "label": "75" }
      ],
      "out_of_range": "transparent",
      "legend": {
        "title": "Reflectivity (dBZ)",
        "labels": ["5", "20", "35", "50", "65", "75"]
      }
    },
    "total_precipitation": {
      "name": "Total Precipitation",
      "description": "Accumulated precipitation totals",
      "type": "gradient",
      "units": "mm",
      "range": {
        "min": 0,
        "max": 200
      },
      "stops": [
        { "value": 0, "color": "#FFFFFF00", "label": "0" },
        { "value": 0.25, "color": "#C0FFC0", "label": "0.25" },
        { "value": 1, "color": "#80FF80", "label": "1" },
        { "value": 2.5, "color": "#00FF00", "label": "2.5" },
        { "value": 5, "color": "#00C000", "label": "5" },
        { "value": 10, "color": "#008000", "label": "10" },
        { "value": 15, "color": "#FFFF00", "label": "15" },
        { "value": 25, "color": "#FFC000", "label": "25" },
        { "value": 50, "color": "#FF8000", "label": "50" },
        { "value": 75, "color": "#FF0000", "label": "75" },
        { "value": 100, "color": "#C00000", "label": "100" },
        { "value": 150, "color": "#800080", "label": "150" },
        { "value": 200, "color": "#FF00FF", "label": "200+" }
      ],
      "interpolation": "linear",
      "out_of_range": "extend",
      "legend": {
        "title": "Precipitation (mm)",
        "labels": ["0", "5", "10", "25", "50", "100", "200+"]
      }
    },
    "snow_depth": {
      "name": "Snow Depth",
      "description": "Snow accumulation depth",
      "type": "gradient",
      "units": "cm",
      "range": {
        "min": 0,
        "max": 100
      },
      "stops": [
        { "value": 0, "color": "#FFFFFF00", "label": "0" },
        { "value": 1, "color": "#E0E0FF", "label": "1" },
        { "value": 5, "color": "#B0B0FF", "label": "5" },
        { "value": 10, "color": "#8080FF", "label": "10" },
        { "value": 20, "color": "#5050FF", "label": "20" },
        { "value": 30, "color": "#2020FF", "label": "30" },
        { "value": 50, "color": "#0000FF", "label": "50" },
        { "value": 75, "color": "#0000C0", "label": "75" },
        { "value": 100, "color": "#000080", "label": "100+" }
      ],
      "interpolation": "linear",
      "out_of_range": "clamp",
      "legend": {
        "title": "Snow Depth (cm)",
        "labels": ["0", "10", "30", "50", "75", "100+"]
      }
    }
  }
}
