  "documentation": {
    "wind_barb_interpretation": {
      "staff": "Line points FROM the direction the wind is coming",
      "pennant": "Filled triangle = 50 knots",
      "long_barb": "Line perpendicular to staff = 10 knots",
      "short_barb": "Half-length line perpendicular to staff = 5 knots",
      "calm": "Circle = wind speed < 2.5 knots",
      "example": {
        "15_knots_from_north": "Staff pointing up with one long barb (10kt) and one short barb (5kt)",
        "35_knots_from_northeast": "Staff pointing up-right with one pennant (50kt is too much, shows as one long + one short barb total 15kt) - actually 35kt shows as one long (10) + one long (10) + one short (5) = 25kt shown, need 1 more long",
        "50_knots_from_south": "Staff pointing down with one pennant (50kt)"
      }
    },
    "grid_spacing": {
      "description": "Spacing parameter controls density of barbs to prevent overlapping",
      "default_30px": "Reasonable spacing for 512x512 maps",
      "30px": "Dense visualization, suitable for zoom level 8+",
      "50px": "Medium density, suitable for most viewing scales",
      "100px": "Sparse visualization, suitable for low zoom levels"
    },
    "color_conventions": {
