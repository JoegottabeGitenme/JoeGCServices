{
  "version": "1.0",
  "metadata": {
    "name": "Wind Barb Styles",
    "description": "Traditional meteorological wind barb rendering configurations"
  },
  "styles": {
    "standard": {
      "default": true,
      "name": "Standard Wind Barbs",
      "description": "Traditional meteorological wind barbs with automatic pennant and barb generation",
      "type": "wind_barbs",
      "units": "kt",
      "transform": {
        "type": "mps_to_knots"
      },
      "wind": {
        "spacing": 20,
        "size": 65.0,
        "line_width": 4.5,
        "color": "#000000",
        "direction_from": true,
        "calm_threshold": 2.5
      },
      "legend": {
        "title": "Wind Barbs"
      }
    },
    "bold": {
      "name": "Bold Wind Barbs",
      "description": "Thicker lines for visibility on small screens",
      "type": "wind_barbs",
      "units": "kt",
      "transform": {
        "type": "mps_to_knots"
      },
      "wind": {
        "spacing": 60,
        "size": 30.0,
        "line_width": 2.5,
        "color": "#1A1A1A",
        "direction_from": true,
        "calm_threshold": 2.5
      },
      "legend": {
        "title": "Wind Barbs (Bold)"
      }
    },
    "colored": {
      "name": "Colored Wind Barbs",
      "description": "Wind barbs colored by speed category",
      "type": "wind_barbs",
      "units": "kt",
      "transform": {
        "type": "mps_to_knots"
      },
      "wind": {
        "spacing": 50,
        "size": 25.0,
        "line_width": 1.5,
        "direction_from": true,
        "calm_threshold": 2.5
      },
      "color_by_speed": {
        "enabled": true,
        "stops": [
          {
            "value": 0,
            "color": "#FFFFFF",
            "label": "Calm"
          },
          {
            "value": 5,
            "color": "#00FF00",
            "label": "5 kt"
          },
          {
            "value": 10,
            "color": "#00C000",
            "label": "10 kt"
          },
          {
            "value": 15,
            "color": "#FFFF00",
            "label": "15 kt"
          },
          {
            "value": 20,
            "color": "#FFC000",
            "label": "20 kt"
          },
          {
            "value": 30,
            "color": "#FF8000",
            "label": "30 kt"
          },
          {
            "value": 50,
            "color": "#FF4040",
            "label": "50 kt"
          },
          {
            "value": 70,
            "color": "#FF0000",
            "label": "70 kt"
          },
          {
            "value": 100,
            "color": "#C00000",
            "label": "100+ kt"
          }
        ],
        "interpolation": "linear",
        "out_of_range": "clamp"
      },
      "legend": {
        "title": "Wind Barbs (Colored by Speed)"
      }
    },
    "dense": {
      "name": "Dense Wind Barbs",
      "description": "More barbs per unit area for detailed wind field visualization",
      "type": "wind_barbs",
      "units": "kt",
      "transform": {
        "type": "mps_to_knots"
      },
      "wind": {
        "spacing": 30,
        "size": 20.0,
        "line_width": 1.0,
        "color": "#000000",
        "direction_from": true,
        "calm_threshold": 2.5
      },
      "legend": {
        "title": "Wind Barbs (Dense)"
      }
    },
    "sparse": {
      "name": "Sparse Wind Barbs",
      "description": "Fewer barbs for less cluttered overview maps",
      "type": "wind_barbs",
      "units": "kt",
      "transform": {
        "type": "mps_to_knots"
      },
      "wind": {
        "spacing": 100,
        "size": 30.0,
        "line_width": 2.0,
        "color": "#000000",
        "direction_from": true,
        "calm_threshold": 2.5
      },
      "legend": {
        "title": "Wind Barbs (Sparse)"
      }
    }
  }
}
