        "staff_length": 30.0,
        "barb_length": 10.0,
        "spacing": 100,
        "line_width": 2.0,
        "color": "#000000",
        "background_color": "transparent"
      },
      "wind_convention": {
        "direction_from": true
      },
      "barb_representation": {
        "pennant_value": 50,
        "long_barb_value": 10,
        "short_barb_value": 5,
