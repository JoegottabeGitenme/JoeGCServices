{
  "version": "1.0",
  "metadata": {
    "name": "Wind Barbs Style Configuration",
    "description": "Traditional meteorological wind barb rendering configuration for GFS wind data",
    "author": "Weather WMS",
    "created": "2025-11-25"
  },
  "styles": {
    "default": {
      "name": "Standard Wind Barbs",
      "description": "Traditional meteorological wind barbs with automatic pennant and barb generation",
      "type": "wind_barbs",
      "units": "knots",
      "rendering": {
        "staff_length": 25.0,
        "barb_length": 8.0,
        "spacing": 50,
        "line_width": 1.5,
        "color": "#000000",
        "background_color": "transparent"
      },
      "wind_convention": {
        "direction_from": true,
        "description": "Direction FROM which wind blows (0째=N, 90째=E, 180째=S, 270째=W)"
      },
      "barb_representation": {
        "pennant_value": 50,
        "long_barb_value": 10,
        "short_barb_value": 5,
        "calm_threshold": 2.5,
        "calm_symbol": "circle"
      }
    },
    "bold": {
      "name": "Bold Wind Barbs",
      "description": "Thicker lines for visibility on small screens",
      "type": "wind_barbs",
      "units": "knots",
      "rendering": {
        "staff_length": 30.0,
        "barb_length": 10.0,
        "spacing": 60,
        "line_width": 2.5,
        "color": "#1A1A1A",
        "background_color": "transparent"
      },
      "wind_convention": {
        "direction_from": true
      },
      "barb_representation": {
        "pennant_value": 50,
        "long_barb_value": 10,
        "short_barb_value": 5,
        "calm_threshold": 2.5,
        "calm_symbol": "circle"
      }
    },
    "colored": {
      "name": "Colored Wind Barbs",
      "description": "Wind barbs colored by speed category",
      "type": "wind_barbs",
      "units": "knots",
      "rendering": {
        "staff_length": 25.0,
        "barb_length": 8.0,
        "spacing": 50,
        "line_width": 1.5,
        "background_color": "transparent"
      },
      "wind_convention": {
        "direction_from": true
      },
      "barb_representation": {
        "pennant_value": 50,
        "long_barb_value": 10,
        "short_barb_value": 5,
        "calm_threshold": 2.5,
        "calm_symbol": "circle"
      },
      "color_by_speed": {
        "interpolation": "linear",
        "out_of_range": "clamp",
