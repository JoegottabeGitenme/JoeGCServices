{
  "version": "1.0",
  "metadata": {
    "name": "CAPE/CIN Styles",
    "description": "Styles for convective stability parameters (CAPE and CIN)"
  },
  "styles": {
    "default": {
      "name": "CAPE",
      "description": "Convective Available Potential Energy - indicates severe weather potential",
      "type": "gradient",
      "units": "J/kg",
      "range": {
        "min": 0,
        "max": 5000
      },
      "stops": [
        { "value": 0, "color": "#FFFFFF00", "label": "0" },
        { "value": 100, "color": "#FFFFCC", "label": "100" },
        { "value": 250, "color": "#FFFF66", "label": "250" },
        { "value": 500, "color": "#FFCC00", "label": "500" },
        { "value": 1000, "color": "#FF9900", "label": "1000" },
        { "value": 1500, "color": "#FF6600", "label": "1500" },
        { "value": 2000, "color": "#FF0000", "label": "2000" },
        { "value": 2500, "color": "#CC0066", "label": "2500" },
        { "value": 3000, "color": "#990099", "label": "3000" },
        { "value": 4000, "color": "#660099", "label": "4000" },
        { "value": 5000, "color": "#330066", "label": "5000+" }
      ],
      "interpolation": "linear",
      "out_of_range": "clamp",
      "legend": {
        "title": "CAPE (J/kg)",
        "labels": ["0", "500", "1000", "2000", "3000", "5000+"],
        "description": "Marginal (<1000), Moderate (1000-2000), High (2000-3000), Extreme (>3000)"
      }
    },
    "cin": {
      "name": "CIN",
      "description": "Convective Inhibition - energy needed to initiate convection",
      "type": "gradient",
      "units": "J/kg",
      "range": {
        "min": -500,
        "max": 0
      },
      "stops": [
        { "value": -500, "color": "#000066", "label": "-500" },
        { "value": -300, "color": "#0000CC", "label": "-300" },
        { "value": -200, "color": "#3366FF", "label": "-200" },
        { "value": -100, "color": "#6699FF", "label": "-100" },
        { "value": -50, "color": "#99CCFF", "label": "-50" },
        { "value": -25, "color": "#CCE5FF", "label": "-25" },
        { "value": 0, "color": "#FFFFFF00", "label": "0" }
      ],
      "interpolation": "linear",
      "out_of_range": "clamp",
      "legend": {
        "title": "CIN (J/kg)",
        "labels": ["0", "-50", "-100", "-200", "-300", "-500"],
        "description": "Weak (<50), Moderate (50-200), Strong (>200)"
      }
    }
  }
}
