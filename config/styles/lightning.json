{
  "version": "1.0",
  "metadata": {
    "name": "Lightning Styles",
    "description": "Styles for lightning threat and flash density visualization"
  },
  "styles": {
    "default": {
      "name": "Lightning Threat",
      "description": "Lightning flash density - flashes per km² per minute",
      "type": "gradient",
      "units": "flashes/km²/min",
      "range": {
        "min": 0,
        "max": 1
      },
      "stops": [
        { "value": 0, "color": "#FFFFFF00", "label": "None" },
        { "value": 0.001, "color": "#FFFFCC", "label": "Trace" },
        { "value": 0.01, "color": "#FFFF00", "label": "Low" },
        { "value": 0.05, "color": "#FFD700", "label": "" },
        { "value": 0.1, "color": "#FFA500", "label": "Moderate" },
        { "value": 0.2, "color": "#FF6600", "label": "" },
        { "value": 0.3, "color": "#FF0000", "label": "High" },
        { "value": 0.5, "color": "#CC0066", "label": "" },
        { "value": 0.75, "color": "#9900CC", "label": "Extreme" },
        { "value": 1.0, "color": "#6600CC", "label": "" }
      ],
      "interpolation": "linear",
      "out_of_range": "clamp",
      "legend": {
        "title": "Lightning Threat",
        "labels": ["None", "Low", "Moderate", "High", "Extreme"]
      }
    },
    "probability": {
      "name": "Lightning Probability",
      "description": "Probability of lightning occurrence (%)",
      "type": "gradient",
      "units": "%",
      "range": {
        "min": 0,
        "max": 100
      },
      "stops": [
        { "value": 0, "color": "#FFFFFF00", "label": "0%" },
        { "value": 10, "color": "#FFFFCC", "label": "10%" },
        { "value": 25, "color": "#FFFF00", "label": "25%" },
        { "value": 40, "color": "#FFD700", "label": "40%" },
        { "value": 50, "color": "#FFA500", "label": "50%" },
        { "value": 65, "color": "#FF6600", "label": "65%" },
        { "value": 75, "color": "#FF0000", "label": "75%" },
        { "value": 90, "color": "#CC0066", "label": "90%" },
        { "value": 100, "color": "#9900CC", "label": "100%" }
      ],
      "interpolation": "linear",
      "out_of_range": "clamp",
      "legend": {
        "title": "Lightning Probability (%)",
        "labels": ["0", "25", "50", "75", "100"]
      }
    }
  }
}
