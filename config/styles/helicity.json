{
  "version": "1.0",
  "metadata": {
    "name": "Helicity and Severe Weather Styles",
    "description": "Styles for storm-relative helicity, updraft helicity, and severe weather parameters"
  },
  "styles": {
    "updraft": {
      "default": true,
      "name": "Updraft Helicity",
      "description": "Maximum updraft helicity (2-5km) - tornado/supercell potential",
      "type": "gradient",
      "units": "m²/s²",
      "range": {
        "min": 0,
        "max": 500
      },
      "stops": [
        { "value": 0, "color": "#FFFFFF00", "label": "0" },
        { "value": 25, "color": "#D0FFD0", "label": "25" },
        { "value": 50, "color": "#80FF80", "label": "50" },
        { "value": 75, "color": "#FFFF00", "label": "75" },
        { "value": 100, "color": "#FFD700", "label": "100" },
        { "value": 150, "color": "#FFA500", "label": "150" },
        { "value": 200, "color": "#FF6600", "label": "200" },
        { "value": 300, "color": "#FF0000", "label": "300" },
        { "value": 400, "color": "#CC0066", "label": "400" },
        { "value": 500, "color": "#9900CC", "label": "500+" }
      ],
      "interpolation": "linear",
      "out_of_range": "clamp",
      "legend": {
        "title": "Updraft Helicity (m²/s²)",
        "labels": ["0", "75", "150", "300", "500+"],
        "description": "Weak (<75), Moderate (75-150), Significant (150-300), Extreme (>300)"
      }
    },
    "storm_relative": {
      "name": "Storm-Relative Helicity",
      "description": "0-3km Storm-Relative Helicity for tornado potential",
      "type": "gradient",
      "units": "m²/s²",
      "range": {
        "min": 0,
        "max": 600
      },
      "stops": [
        { "value": 0, "color": "#FFFFFF00", "label": "0" },
        { "value": 50, "color": "#D0FFD0", "label": "50" },
        { "value": 100, "color": "#80FF80", "label": "100" },
        { "value": 150, "color": "#FFFF00", "label": "150" },
        { "value": 200, "color": "#FFD700", "label": "200" },
        { "value": 250, "color": "#FFA500", "label": "250" },
        { "value": 300, "color": "#FF6600", "label": "300" },
        { "value": 400, "color": "#FF0000", "label": "400" },
        { "value": 500, "color": "#CC0066", "label": "500" },
        { "value": 600, "color": "#9900CC", "label": "600+" }
      ],
      "interpolation": "linear",
      "out_of_range": "clamp",
      "legend": {
        "title": "SRH (m²/s²)",
        "labels": ["0", "100", "200", "300", "500+"],
        "description": "Weak (<100), Moderate (100-200), Significant (200-300), Extreme (>300)"
      }
    },
    "significant_tornado": {
      "name": "Significant Tornado Parameter",
      "description": "Composite parameter combining CAPE, helicity, and wind shear",
      "type": "gradient",
      "units": "dimensionless",
      "range": {
        "min": 0,
        "max": 10
      },
      "stops": [
        { "value": 0, "color": "#FFFFFF00", "label": "0" },
        { "value": 0.5, "color": "#D0FFD0", "label": "0.5" },
        { "value": 1.0, "color": "#80FF80", "label": "1" },
        { "value": 2.0, "color": "#FFFF00", "label": "2" },
        { "value": 3.0, "color": "#FFA500", "label": "3" },
        { "value": 4.0, "color": "#FF6600", "label": "4" },
        { "value": 5.0, "color": "#FF0000", "label": "5" },
        { "value": 7.0, "color": "#CC0066", "label": "7" },
        { "value": 10.0, "color": "#9900CC", "label": "10+" }
      ],
      "interpolation": "linear",
      "out_of_range": "clamp",
      "legend": {
        "title": "STP",
        "labels": ["0", "1", "3", "5", "10+"],
        "description": "Low (<1), Moderate (1-3), High (3-5), Extreme (>5)"
      }
    }
  }
}
