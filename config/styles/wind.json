{
  "version": "1.0",
  "metadata": {
    "name": "Wind Styles",
    "description": "Wind visualization styles including speed gradients, barbs, arrows, and gusts"
  },
  "styles": {
    "wind_speed_knots": {
      "default": true,
      "name": "Wind Speed (Knots)",
      "description": "Wind speed gradient in knots",
      "type": "gradient",
      "units": "kt",
      "transform": {
        "type": "mps_to_knots"
      },
      "range": {
        "min": 0,
        "max": 100
      },
      "stops": [
        { "value": 0, "color": "#FFFFFF", "label": "Calm" },
        { "value": 5, "color": "#AAFFAA", "label": "5 kt" },
        { "value": 10, "color": "#00FF00", "label": "10 kt" },
        { "value": 15, "color": "#00C000", "label": "15 kt" },
        { "value": 20, "color": "#FFFF00", "label": "20 kt" },
        { "value": 25, "color": "#FFC000", "label": "25 kt" },
        { "value": 30, "color": "#FF8000", "label": "30 kt" },
        { "value": 40, "color": "#FF4000", "label": "40 kt" },
        { "value": 50, "color": "#FF0000", "label": "50 kt" },
        { "value": 64, "color": "#C00000", "label": "64 kt (Storm)" },
        { "value": 80, "color": "#800080", "label": "80 kt" },
        { "value": 100, "color": "#FF00FF", "label": "100+ kt" }
      ],
      "interpolation": "linear",
      "out_of_range": "extend",
      "legend": {
        "title": "Wind Speed (kt)",
        "labels": ["Calm", "10", "20", "30", "50", "64", "100+"]
      }
    },
    "wind_speed_mps": {
      "name": "Wind Speed (m/s)",
      "description": "Wind speed gradient in meters per second",
      "type": "gradient",
      "units": "m/s",
      "range": {
        "min": 0,
        "max": 50
      },
      "stops": [
        { "value": 0, "color": "#FFFFFF", "label": "Calm" },
        { "value": 2, "color": "#AAFFAA", "label": "2" },
        { "value": 5, "color": "#00FF00", "label": "5" },
        { "value": 10, "color": "#00C000", "label": "10" },
        { "value": 15, "color": "#FFFF00", "label": "15" },
        { "value": 20, "color": "#FF8000", "label": "20" },
        { "value": 25, "color": "#FF0000", "label": "25" },
        { "value": 30, "color": "#C00000", "label": "30" },
        { "value": 40, "color": "#800080", "label": "40" },
        { "value": 50, "color": "#FF00FF", "label": "50+" }
      ],
      "interpolation": "linear",
      "out_of_range": "extend",
      "legend": {
        "title": "Wind Speed (m/s)",
        "labels": ["Calm", "5", "10", "20", "30", "50+"]
      }
    },
    "wind_barbs": {
      "name": "Wind Barbs",
      "description": "Traditional meteorological wind barbs",
      "type": "wind_barbs",
      "units": "kt",
      "transform": {
        "type": "mps_to_knots"
      },
      "wind": {
        "spacing": 50,
        "size": 25.0,
        "line_width": 1.5,
        "color": "#000000",
        "direction_from": true,
        "calm_threshold": 2.5
      },
      "legend": {
        "title": "Wind Barbs"
      }
    },
    "wind_arrows": {
      "name": "Wind Arrows",
      "description": "Wind direction arrows colored by speed",
      "type": "wind_arrows",
      "units": "m/s",
      "wind": {
        "spacing": 40,
        "min_length": 5.0,
        "max_length": 40.0,
        "line_width": 1.5
      },
      "color_by_speed": {
        "enabled": true,
        "stops": [
          { "value": 0, "color": "#808080" },
          { "value": 5, "color": "#00FF00" },
          { "value": 10, "color": "#FFFF00" },
          { "value": 20, "color": "#FF8000" },
          { "value": 30, "color": "#FF0000" }
        ],
        "interpolation": "linear",
        "out_of_range": "clamp"
      },
      "legend": {
        "title": "Wind Arrows"
      }
    },
    "wind_gust": {
      "name": "Wind Gust",
      "description": "Maximum wind gust speed",
      "type": "gradient",
      "units": "kt",
      "transform": {
        "type": "mps_to_knots"
      },
      "range": {
        "min": 0,
        "max": 100
      },
      "stops": [
        { "value": 0, "color": "#FFFFFF00", "label": "0" },
        { "value": 20, "color": "#FFFF00", "label": "20" },
        { "value": 30, "color": "#FF8000", "label": "30" },
        { "value": 40, "color": "#FF4000", "label": "40" },
        { "value": 50, "color": "#FF0000", "label": "50" },
        { "value": 60, "color": "#C00000", "label": "60" },
        { "value": 75, "color": "#800080", "label": "75" },
        { "value": 100, "color": "#FF00FF", "label": "100+" }
      ],
      "interpolation": "linear",
      "out_of_range": "extend",
      "no_data": {
        "value": 0,
        "color": "transparent"
      },
      "legend": {
        "title": "Wind Gust (kt)",
        "labels": ["0", "20", "40", "60", "100+"]
      }
    }
  }
}
