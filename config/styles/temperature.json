{
  "version": "1.0",
  "metadata": {
    "name": "Temperature Styles",
    "description": "All visualization styles for temperature parameters"
  },
  "styles": {
    "gradient": {
      "default": true,
      "name": "Temperature Gradient",
      "description": "Temperature color scale from cold (blue) to hot (red)",
      "type": "gradient",
      "range": {
        "min": 233.15,
        "max": 313.15
      },
      "stops": [
        { "value": 233.15, "color": "#1E0082", "label": "-40°C" },
        { "value": 243.15, "color": "#0032C8", "label": "-30°C" },
        { "value": 253.15, "color": "#0096FF", "label": "-20°C" },
        { "value": 263.15, "color": "#32C8FF", "label": "-10°C" },
        { "value": 273.15, "color": "#96FFC8", "label": "0°C" },
        { "value": 283.15, "color": "#FFFF32", "label": "10°C" },
        { "value": 293.15, "color": "#FF9600", "label": "20°C" },
        { "value": 303.15, "color": "#FF3200", "label": "30°C" },
        { "value": 313.15, "color": "#960000", "label": "40°C" }
      ],
      "interpolation": "linear",
      "out_of_range": "clamp",
      "legend": {
        "title": "Temperature (°C)",
        "labels": ["-40", "-20", "0", "20", "40"]
      }
    },
    "isolines": {
      "name": "Temperature Isolines",
      "description": "Temperature contour lines at 5°C intervals",
      "type": "contour",
      "transform": {
        "type": "kelvin_to_celsius"
      },
      "contour": {
        "interval": 5.0,
        "min_value": -40,
        "max_value": 40,
        "line_width": 1.5,
        "line_color": "#333333",
        "labels": true,
        "label_font_size": 9.0,
        "label_spacing": 180.0,
        "smoothing_passes": 1,
        "special_levels": [
          {
            "value": 0,
            "line_color": "#0066FF",
            "line_width": 2.5,
            "label": "0°C"
          }
        ]
      },
      "legend": {
        "title": "Temperature (°C)"
      }
    },
    "numbers": {
      "name": "Numeric Values",
      "description": "Display temperature values as numbers on the map",
      "type": "numbers",
      "transform": {
        "type": "kelvin_to_celsius"
      },
      "numbers": {
        "spacing": 50,
        "font_size": 11.0,
        "font_color": "#000000",
        "background_color": "#FFFFFFCC",
        "decimal_places": 1
      },
      "legend": {
        "title": "Temperature (°C)"
      }
    }
  }
}
